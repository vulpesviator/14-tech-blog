<div class="row">
  <div class="col-sm-6">
		<div class="card">
			<h3 class="card-header">Edit Post</h3>
			<form id="create-post" class="card-body d-flex flex-column" action="/api/posts/update" method="POST">
				<div class="row mb-3">
					<div class="input-group col-4 mb-3">
					<label class="form-label">Title</label>
                    <input class="form-control" id="titleInput" maxlength="50" />
					</div>
					<label class="form-label">Body</label>
                    <textarea class="form-control" id="bodyInput" rows="10"></textarea>
				</div>			
				<div class="form-group col-11">
					<button type="submit" id="postBtn" class="btn btn-sm btn-primary">Post</button>
					
				</div>
			</form>
		</div>
	</div>	
</div>

<script src="/js/new-post.js"></script>