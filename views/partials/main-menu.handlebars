<!-- Creates the nav bar for each View -->
<nav class="navbar navbar-expand-md bg-secondary text-white shadow">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1 text-white">Tech Blog</span>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/dashboard">Dashboard</a>
        </li>
        <!-- When User is logged in, they see the logout button -->
        {{#if logged_in}}
          <button type="button" class="btn btn-danger btn-sm ms-2" id="logout">Logout</button>
        {{else}}
          <!-- Else the User is logged out and sees the buttson for Login and Sign Up -->
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Sign Up</a>
          </li>
        {{/if}}
      </ul>
      <!-- When User is logged in, their name is displayed in the nav bar -->
      {{#if logged_in}}
        <div class="d-flex align-middle me-3">
          <span>User: {{username}}</span>
        </div>
      {{/if}}
    </div>
  </div>
</nav>